upstream rag_chatbot {
    server 127.0.0.1:8501;
}

server {
    listen 80;
    server_name  _;

    # Proxy all /rag-chatbot/* requests to the RAG-Doc service
    location /rag-chatbot/ {
        # Strip the /rag-chatbot prefix before forwarding
        rewrite ^/rag-chatbot/(.*)$ /$1 break;

        proxy_pass http://rag_chatbot;
        proxy_http_version 1.1;

        # Preserve headers
        proxy_set_header Host              $host;
        proxy_set_header X-Real-IP         $remote_addr;
        proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Support WebSocket or HTTP upgrade if needed
        proxy_set_header Upgrade           $http_upgrade;
        proxy_set_header Connection        "upgrade";

        # Optional timeouts
        proxy_read_timeout                  90s;
        proxy_send_timeout                  90s;
    }

    # (Optional) Redirect bare /rag-chatbot to the index
    location = /rag-chatbot {
        return 301 /rag-chatbot/;
    }
}
